{%- raw -%}
  {%- comment -%} If this item has children, output the item, and then go get its children {%- endcomment -%}
  {%- if this['is_parent'] -%}
    {%- if _level == 1 -%}
      {% comment %} Top level dropdown {% endcomment %}
      <li>
        <div>
          <button id="dropdown_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" data-dropdown-toggle="{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" data-dropdown-placement="bottom-start" class="flex justify-between items-center py-2 pr-4 pl-3 w-full font-medium text-gray-700 border-b border-gray-100 lg:w-auto hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-600 lg:p-0 dark:text-gray-400 lg:dark:hover:text-primary-500 dark:hover:bg-gray-700 dark:hover:text-primary-500 lg:dark:hover:bg-transparent dark:border-gray-700" type="button">{{this['link_name']}} <svg class="ml-1 w-5 h-5 lg:w-4 lg:h-4" fill="currentColor" stroke="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg></button>
          <div id="{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" class="hidden z-10 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700">
            <ul class="py-1 text-sm font-light text-gray-500 dark:text-gray-400" aria-labelledby="dropdown_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}">
              {%- assign _next_level = _level | plus: 1 -%}
              {%- include 'modules/siteglide_menu/get/get_items', level: _next_level, parent_id: this['forced_id'], item_layout: 'item' -%}
            </ul>
          </div>
        </div>
      </li>
    {%- else -%}
      {% comment %} Nested Dropdown {% endcomment %}
      <li>
        <button id="dropdown_btn_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" data-dropdown-toggle="dropdown_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" data-dropdown-placement="right-start" type="button" class="flex justify-between items-center py-2 px-4 w-full hover:text-primary-600 dark:hover:text-primary-500">
          <span class="flex items-center">
            {{this['link_name']}}
          </span>
          <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        </button>
        <div id="dropdown_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}" class="hidden z-10 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700">
          <ul class="py-1 text-sm font-light text-gray-500 dark:text-gray-400" aria-labelledby="dropdown_btn_{{sitegurus_ui_uniq_component_id}}_{{_level}}_{{forloop.index}}">
            {%- assign _next_level = _level | plus: 1 -%}
            {%- include 'modules/siteglide_menu/get/get_items', level: _next_level, parent_id: this['forced_id'], item_layout: 'item' -%}
          </ul>
        </div>
      </li>
    {%- endif -%}
  {%- else -%}
    {%- comment -%} Else output dropdown children or single item {%- endcomment -%}
    <li {% if this['link_url'] == context.location.pathname %}aria-current="page"{% endif %} class="{% if _level == 1 %}lg:flex lg:items-center{% endif %}">
      <a class="{% if this['link_url'] == context.location.pathname and _level == 1 %}
        {% comment %} Top level current link {% endcomment %}
        block py-2 pl-3 pr-4 text-white bg-primary-700 rounded lg:bg-transparent lg:text-primary-700 lg:p-0  dark:lg:text-white dark:bg-primary-600  dark:lg:bg-transparent
      {% elsif _level == 1 %}
        {% comment %} Top level standard link {% endcomment %}
        block py-2 pl-3 pr-4 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 dark:hover:text-white dark:border-gray-700 dark:hover:bg-gray-700  dark:lg:hover:bg-transparent
      {% elsif this['link_url'] == context.location.pathname and _level > 1 %}
        {% comment %} Nested current link {% endcomment %}
        flex items-center py-2 px-4 w-full hover:text-primary-600 dark:hover:text-primary-500 lg:bg-transparent lg:text-primary-700  dark:lg:text-white dark:bg-primary-600 dark:lg:bg-transparent
      {% elsif _level > 1 %}
        {% comment %} Nested standard link {% endcomment %}
        flex items-center py-2 px-4 w-full hover:text-primary-600 dark:hover:text-primary-500 lg:bg-transparent
      {% endif %}" {% if this['link_target'] %} target="{{this['link_target']}}"{% endif %} href="{{this['link_url']}}">{{this['link_name']}}</a>
    </li>
  {%- endif -%}
{%- endraw -%}